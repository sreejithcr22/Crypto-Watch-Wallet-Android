<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/market_list_item_height"
    android:layout_marginLeft="@dimen/wallet_item_left_right_margin"
    android:layout_marginRight="@dimen/wallet_item_left_right_margin"
    android:paddingTop="@dimen/wallet_item_top_bottom_padding"
    android:paddingBottom="@dimen/wallet_item_top_bottom_padding">

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/coin_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:singleLine="true"
        android:textSize="@dimen/market_list_item_coin_name_text_size" />

    <TextView
        android:layout_centerVertical="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/coin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wallet_list_item_coin_code_margin_top"
        android:background="@drawable/price_green_bg"
        android:fontFamily="@font/colabreg"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/market_list_item_price_text_size" />


</RelativeLayout>